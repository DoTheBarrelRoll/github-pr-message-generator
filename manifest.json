{
    "manifest_version": 3,
    "name": "Create PR Message Button",
    "version": "1.0",
    "description": "Adds a button to generate a formatted Pull Request message on PR pages.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://github.com/*/pull/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/pull/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js"
            ],
            "matches": [
                "https://github.com/*/pull/*"
            ]
        }
    ]
}